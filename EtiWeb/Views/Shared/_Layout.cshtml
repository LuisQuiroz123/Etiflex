@using EtiWeb.Helpers
@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString() ?? "Default";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EtiWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EtiWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: "Segoe UI", sans-serif;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        .sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #212529;
            color: white;
            flex-shrink: 0;
            padding: 1rem 0.5rem;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                transition: all 0.2s;
                position: relative;
            }

                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #0d6efd;
                    border-radius: 0.375rem;
                    box-shadow: 0 2px 6px rgba(0,0,0,0.15);
                }

                .sidebar .nav-link .bi {
                    margin-right: 0.5rem;
                    font-size: 1.1rem;
                }

            .sidebar .collapse .nav-link {
                padding-left: 2rem;
            }

        .content {
            flex-grow: 1;
            padding: 1rem;
            background-color: #f8f9fa;
            min-height: calc(100vh - 56px - 40px);
        }

        .footer {
            margin-top: auto;
            padding: 0.5rem 1rem;
            background-color: #f1f1f1;
        }

        .sidebar .collapse {
            transition: height 0.3s ease, opacity 0.3s ease;
            overflow: hidden;
            display: block;
            height: 0;
            opacity: 0;
        }

            .sidebar .collapse.show {
                height: auto;
                opacity: 1;
            }

        @@media (max-width:991px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -260px;
                height: 100%;
                z-index: 1050;
            }

                .sidebar.show {
                    left: 0;
                }
        }

        /* Modal oscuro elegante */
        .modal-dark-theme .modal-header {
            background: linear-gradient(135deg, #0d1b2a, #1b263b, #007bff);
            color: #ffffff;
            border-bottom: 1px solid rgba(255,255,255,0.15);
        }

        .modal-dark-theme .modal-title i {
            color: #ffc107;
        }

        .modal-dark-theme .modal-content {
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border: none;
        }

        .modal-dark-theme .btn-close-white {
            filter: invert(1);
        }

        .modal-dark-theme .modal-body {
            background-color: #ffffff;
            color: #212529;
        }

        .modal-dark-theme .modal-footer {
            background-color: #f1f3f5;
            border-top: 1px solid rgba(0,0,0,0.1);
        }

        .modal-dark-theme .modal-body .form-control {
            background-color: #f8f9fa;
            color: #212529;
            border: 1px solid #ccc;
        }

            .modal-dark-theme .modal-body .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px #007bff;
            }

        .modal-dark-theme .btn-primary {
            background: linear-gradient(135deg,#0066cc,#00bfff);
            border: none;
        }

            .modal-dark-theme .btn-primary:hover {
                background: linear-gradient(135deg,#0052a3,#0099cc);
            }

        .modal-dark-theme label.form-label {
            color: #212529;
        }

        .modal-backdrop.show {
            background-color: rgba(0,0,0,0.6);
            backdrop-filter: blur(4px);
        }
    </style>
</head>
<body>
    <!-- Navbar superior -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            <button class="btn btn-primary d-lg-none" id="btn-toggle-sidebar"><i class="bi bi-list"></i></button>
            <a class="navbar-brand d-flex align-items-center ms-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.jpeg" alt="EtiWeb" height="40" class="me-2" />
                <span>EtiWeb</span>
            </a>
            <div class="d-flex ms-auto align-items-center">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger ms-2">
                            <i class="bi bi-box-arrow-right"></i> @User.Identity.Name
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#loginModal">
                        <i class="bi bi-person-circle"></i> Iniciar Sesión
                    </button>
                }
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column shadow" id="sidebar">
            <ul class="nav nav-pills flex-column mb-auto">
                @foreach (var area in MenuHelper.GetMenuStructure())
                {
                    <li>
                        <a class="nav-link text-white d-flex justify-content-between align-items-center"
                           data-bs-toggle="collapse"
                           href="#collapse-@area.Key"
                           role="button"
                           aria-expanded="false"
                           aria-controls="collapse-@area.Key">
                            <span>@(MenuHelper.AreaDisplayNames.ContainsKey(area.Key) ? MenuHelper.AreaDisplayNames[area.Key] : area.Key)</span>
                            <span class="bi bi-chevron-down"></span>
                        </a>
                        <div class="collapse ps-3" id="collapse-@area.Key">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                @foreach (var controller in area.Value)
                                {
                                    <li>
                                        <a class="nav-link text-white d-flex justify-content-between align-items-center"
                                           data-bs-toggle="collapse"
                                           href="#collapse-@area.Key-@controller.Controller"
                                           role="button"
                                           aria-expanded="false"
                                           aria-controls="collapse-@area.Key-@controller.Controller">
                                            <span><i class="bi bi-folder"></i>@(string.IsNullOrEmpty(controller.DisplayName) ? controller.Controller : controller.DisplayName)</span>
                                            <span class="bi bi-chevron-down"></span>
                                        </a>
                                        <div class="collapse ps-3" id="collapse-@area.Key-@controller.Controller">
                                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                                @foreach (var action in controller.Actions)
                                                {
                                                    <li>
                                                        <a class="nav-link text-white ps-4"
                                                           asp-area="@(area.Key == "Default" ? "" : area.Key)"
                                                           asp-controller="@controller.Controller"
                                                           asp-action="@action.Action">
                                                            <i class="bi bi-circle"></i>
                                                            @(string.IsNullOrEmpty(action.DisplayName) ? action.Action : action.DisplayName)
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <!-- Contenido principal -->
        <div class="content">

            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - EtiWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <script>
        document.getElementById("btn-toggle-sidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("show");
        });

        document.querySelectorAll('.sidebar .nav-link[data-bs-toggle="collapse"]').forEach(link => {
            link.addEventListener('click', function () {
                const target = document.querySelector(this.getAttribute('href'));
                if (!target.classList.contains('show')) {
                    target.style.height = '0';
                    target.classList.add('show');
                    let height = target.scrollHeight + 'px';
                    target.style.height = height;
                    setTimeout(() => target.style.height = '', 300);
                } else {
                    target.style.height = target.scrollHeight + 'px';
                    setTimeout(() => target.style.height = '0', 1);
                    setTimeout(() => target.classList.remove('show'), 300);
                }
            });
        });
    </script>

 

    <!-- Modal de Inicio de Sesión -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-dark-theme">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">
                        <i class="bi bi-person-circle me-2"></i>Iniciar Sesión
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario</label>
                            <input type="text" class="form-control" id="username" name="UserName" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="Password" required />
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                            <label class="form-check-label" for="rememberMe">Recordarme</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                            </button>
                        </div>
                    </form>
                    <p id="loginError" class="text-danger text-center mt-3 d-none">
                        ❌ Usuario o contraseña incorrectos
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("loginForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            const response = await fetch("/Account/Login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                location.reload();
            } else {
                document.getElementById("loginError").classList.remove("d-none");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
